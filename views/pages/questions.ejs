<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz: Test Your Knowledge</title>
    <link rel="stylesheet" href="/css/question-styles.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" type="image/png" href="images/logo.png">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="header">
            <div class="container">
                <div class="logo_section">
                    <div class="logo">
                        <a href=""><img src="images/logo.png" alt="Logo"></a>
                    </div>
                </div>
                <div class="menu-area">
                    <div class="limit-box">
                        <nav class="main-menu">
                            <ul class="menu-area-main">
                                <li><a href="/">Home</a></li>
                                <li><a href="/product">อุปกรณ์การเรียน</a></li>
                                <li><a href="brand">ตัวอักษร</a></li>
                                <li><a href="/questions">บทเรียน</a></li>
                                <li class="active"><a href="/quiz">Quiz</a></li>
                                <li class="login"><a href="#"><img src="images/Login.png" alt="Login"></a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- End Header -->

 
<!-- Main Content -->

<main>
    <% if (lesson && questions.length > 0) { %>
        <h1>Quiz: <%= lesson.name %></h1>
        <div id="quiz-container">
            <% questions.forEach((question, index) => { %>
                <div class="question">
                    <p>Question <%= index + 1 %>: <%= question.question %></p>
                    <ul>
                        <input type="radio"><%= question.choice1 %>
                        <input type="radio"><%= question.choice2 %>
                        <input type="radio"><%= question.choice3 %>
                        <input type="radio"><%= question.choice4 %>
                    </ul>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p>No questions found for this lesson.</p>
    <% } %>
</main>

<!-- End Main Content -->




    <!-- Footer -->
    <footer>
        <p>ร้านขายสินค้า &copy; 2024</p>
    </footer>
    <!-- End Footer -->

    <!-- Script -->
    <script src="/js/quiz-script.js"></script>
</body>
</html>
