<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz: Test Your Knowledge</title>
    <link rel="stylesheet" href="/css/question-styles.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" type="image/png" href="images/logo.png">
    <style>
        .question {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <div class="header">
            <div class="container">
                <div class="logo_section">
                    <div class="logo">
                        <a href=""><img src="images/logo.png" alt="Logo"></a>
                    </div>
                </div>
                <div class="menu-area">
                    <div class="limit-box">
                        <nav class="main-menu">
                            <ul class="menu-area-main">
                                <li><a href="/">Home</a></li>
                                <li><a href="/product">อุปกรณ์การเรียน</a></li>
                                <li><a href="brand">ตัวอักษร</a></li>
                                <li><a href="/questions">บทเรียน</a></li>
                                <li class="active"><a href="/quiz">Quiz</a></li>
                                <li class="login"><a href="#"><img src="images/Login.png" alt="Login"></a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- End Header -->

 
<!-- Main Content -->
<main>
    <% if (test && questions.length > 0) { %>
        <h1>Quiz: <%= test.name %></h1>
        <form action="/submit-quiz/<%= test.test_id %>" method="POST">
            <div id="quiz-container">
                <% questions.forEach((question, index) => { %>
                    <div class="question">
                        <p>Question <%= index + 1 %>: <%= question.question %></p>
                        <div class="choices">
                            <div>
                                <input type="radio" name="question<%= index %>" value="1" id="q<%= index %>c1">
                                <label for="q<%= index %>c1"><%= question.choice1 %></label>
                            </div>
                            <div>
                                <input type="radio" name="question<%= index %>" value="2" id="q<%= index %>c2">
                                <label for="q<%= index %>c2"><%= question.choice2 %></label>
                            </div>
                            <div>
                                <input type="radio" name="question<%= index %>" value="3" id="q<%= index %>c3">
                                <label for="q<%= index %>c3"><%= question.choice3 %></label>
                            </div>
                            <div>
                                <input type="radio" name="question<%= index %>" value="4" id="q<%= index %>c4">
                                <label for="q<%= index %>c4"><%= question.choice4 %></label>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            <button type="submit">Submit Quiz</button>
        </form>
    <% } else { %>
        <p>No questions found for this test.</p>
    <% } %>
</main>

    <footer>
        <p>ร้านขายสินค้า &copy; 2024</p>
    </footer>

    <script src="/js/quiz-script.js"></script>
</body>
</html>
