<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= lesson.title %> - Lesson Detail</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/lesson-styles.css">
    <link rel="icon" type="image/png" href="/images/logo.png">
</head>

<body>
    <script src="/js/opennav-script.js"></script>
    <header>
        <div class="header">
            <div class="container">
                <button class="openbtn" onclick="openNav()">☰</button>
                <div class="logo_section">
                    <div class="logo">
                        <a href="#"><img src="images/logo.png" alt="#"></a>
                    </div>
                </div>
                <div class="menu-area">
                    <nav class="main-menu">
                        <ul class="menu-area-main">
                            <li><a href="/">Home</a></li>
                            <li><a href="/characters">ตัวอักษร</a></li>
                            <li><a href="/lessons">บทเรียน</a></li>
                            <li><a href="/tests">Quiz</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="menu-right">
                    <li class="dropdown">
                        <a href="#" class="dropbtn"><% if (user) { %><%= user.username %><% } else { %>Account<% } %></a>
                        <div class="dropdown-content">
                            <% if (user) { %>
                                <a href="/profile">Profile</a>
                                <a href="/logout">ออกจากระบบ</a>
                            <% } else { %>
                                <a id="bt-link" href="/login">Log In</a>
                                <a id="bt-link" href="/sign_up">Sign Up</a>
                            <% } %>
                        </div>
                    </li>
                </div>
            </div>
        </div>
        
        <div id="mySidebar" class="sidebar">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
            <a href="/profile">My profile</a>
        </div>
    </header>


    <main>
        <section class="lesson-detail">
            <div class="container">
                <h1>
                    <%= lesson.title %>
                </h1>
                <div class="lesson-image">
                    <img src="/uploads/<%= lesson.image %>" alt="Lesson Image">
                </div>
                <div class="lesson-description">
                    <p>
                        <%= lesson.description %>
                    </p>
                </div>
            </div>
        </section>

        <section class="tabs-section">
            <div class="container">
                <div class="tabs">
                    <div class="tab active" data-tab="characters">ตัวละครสนทนา</div>
                    <div class="tab" data-tab="conversation">บทสนทนา</div>
                    <div class="tab" data-tab="practice">การฝึกฝน</div>
                </div>
            </div>
        </section>

        <section class="tab-content-section">
            <div class="container" id="tab-content-container">
                <!-- แท็บตัวอักษร -->
                <div class="tab-content active" id="characters">
                    <h2>ตัวละครสนทนา</h2>
                    <ul>
                        <% characters.forEach(character=> { %>
                            <li>
                                <%= character.character_name %>: <%= character.description || 'ไม่มีคำอธิบาย' %>
                            </li>
                            <% }); %>
                    </ul>
                </div>

                <!-- แท็บบทสนทนา -->
                <div class="tab-content" id="conversation">
                    <h2>บทสนทนา</h2>
                    <div class="conversation-lines">
                        <% conversationLines.forEach(line=> { %>
                            <div
                                class="line-content <%= line.character_id === Math.min(...conversationLines.map(c => c.character_id)) ? 'left' : 'right' %>">
                                <strong>ตัวละคร <%= line.character_id %>:</strong>
                                <p>
                                    <%= line.content %>
                                </p>
                                <em>  <%= line.romaji %>,<br><br>
                                      <%= line.translation %></em>
                            </div>
                            <% }); %>
                    </div>
                </div>

                <!-- แท็บการฝึกฝน -->
                <div class="tab-content" id="practice">
                    <h2>การฝึกฝน</h2>
                    <p>ข้อมูลการฝึกฝนจะถูกโหลดที่นี่</p>

                    <% if (hasGame) { %>
                        <a href="/DragandDropGame/<%= lesson.lesson_id %>">เล่นเกม Drag and Drop</a>
                        <% } else { %>
                            <p>ยังไม่มีเกม Drag and Drop สำหรับบทเรียนนี้</p>
                            <% } %>
                </div>

        </section>

        <section class="navigation-links">
            <div class="container">
                <a href="/lessons">Back to Lessons</a>
                <% if (hasGame) { %>
                    <a href="/DragandDropGame/<%= lesson.lesson_id %>">View Questions</a>
                    <% } else { %>
                        <p>ยังไม่มีการฝึกฝนของเกม Drag and Drop สำหรับบทเรียนนี้</p>
                        <% } %>
            </div>
        </section>
    </main>

    <footer>
        <p>ร้านขายสินค้า &copy; 2024</p>
    </footer>

    <script>
        const tabs = document.querySelectorAll('.tab');
        const tabContents = document.querySelectorAll('.tab-content');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                tabContents.forEach(content => content.classList.remove('active'));

                tab.classList.add('active');
                document.getElementById(tab.getAttribute('data-tab')).classList.add('active');
            });
        });
    </script>
</body>

</html>