<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hiragana and Katakana Characters</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/char-styles.css">
</head>

<body>
    <script src="/js/opennav-script.js"></script>
    <header>
        <div class="header">
            <div class="container">
                <button class="openbtn" onclick="openNav()">☰</button>
                <div class="logo_section">
                    <div class="logo">
                        <a href="#"><img src="images/logo.png" alt="#"></a>
                    </div>
                </div>
                <div class="menu-area">
                    <nav class="main-menu">
                        <ul class="menu-area-main">
                            <li><a href="/">Home</a></li>
                            <li><a href="/characters">ตัวอักษร</a></li>
                            <li><a href="/lessons">บทเรียน</a></li>
                            <li><a href="/tests">Quiz</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="menu-right">
                    <li class="dropdown">
                        <a href="#" class="dropbtn"><% if (user) { %><%= user.username %><% } else { %>Account<% } %></a>
                        <div class="dropdown-content">
                            <% if (user) { %>
                                <a href="/profile">Profile</a>
                                <a href="/logout">ออกจากระบบ</a>
                            <% } else { %>
                                <a id="bt-link" href="/login">Log In</a>
                                <a id="bt-link" href="/sign_up">Sign Up</a>
                            <% } %>
                        </div>
                    </li>
                </div>
            </div>
        </div>
        
        <div id="mySidebar" class="sidebar">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
            <a href="/profile">My profile</a>
        </div>
    </header>

    <main>
        <h1>Hiragana and Katakana Characters</h1>
        <div class="tab">
            <button class="tablinks" onclick="openTab(event, 'hiragana')">Hiragana</button>
            <button class="tablinks" onclick="openTab(event, 'katakana')">Katakana</button>
        </div>

        <div id="hiragana" class="tabcontent">
            <h2>Hiragana Characters</h2>
            <div class="grid-container">
                <div class="normal-characters">
                    <h3>Normal Characters</h3>
                    <div class="grid-inner">
                        <% hiragana.forEach(function(char) { if (char.character_type==='normal' ) { %>
                            <div class="card"
                                onclick="showDetails('<%= char.char_value %>', '<%= char.description %>')">
                                <div class="card-header">
                                    <h3>
                                        <%= char.char_value %>
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <p>
                                        <%= char.description %>
                                    </p>
                                </div>
                            </div>
                            <% } }); %>
                    </div>
                </div>

                <div class="dakuten-characters">
                    <h3>Dakuten Characters</h3>
                    <div class="grid-inner">
                        <% hiragana.forEach(function(char) { if (char.character_type==='dakuten' ) { %>
                            <div class="card"
                                onclick="showDetails('<%= char.char_value %>', '<%= char.description %>')">
                                <div class="card-header">
                                    <h3>
                                        <%= char.char_value %>
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <p>
                                        <%= char.description %>
                                    </p>
                                </div>
                            </div>
                            <% } }); %>
                    </div>
                </div>

                <div class="yoon-characters">
                    <h3>Yoon Characters</h3>
                    <div class="grid-inner">
                        <% hiragana.forEach(function(char) { if (char.character_type==='yoon' ) { %>
                            <div class="card"
                                onclick="showDetails('<%= char.char_value %>', '<%= char.description %>')">
                                <div class="card-header">
                                    <h3>
                                        <%= char.char_value %>
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <p>
                                        <%= char.description %>
                                    </p>
                                </div>
                            </div>
                            <% } }); %>
                    </div>
                </div>
            </div>
        </div>

        <div id="katakana" class="tabcontent">
            <h2>Katakana Characters</h2>

            <div class="grid-container">
                <div class="normal-characters">
                    <h3>Normal Characters</h3>
                    <div class="grid-inner">
                        <% katakana.forEach(function(char) { if (char.character_type==='normal' ) { %>
                            <div class="card"
                                onclick="showDetails('<%= char.char_value %>', '<%= char.description %>')">
                                <div class="card-header">
                                    <h3>
                                        <%= char.char_value %>
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <p>
                                        <%= char.description %>
                                    </p>
                                </div>
                            </div>
                            <% } }); %>
                    </div>
                </div>

                <div class="dakuten-characters">
                    <h3>Dakuten Characters</h3>
                    <div class="grid-inner">
                        <% katakana.forEach(function(char) { if (char.character_type==='dakuten' ) { %>
                            <div class="card"
                                onclick="showDetails('<%= char.char_value %>', '<%= char.description %>')">
                                <div class="card-header">
                                    <h3>
                                        <%= char.char_value %>
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <p>
                                        <%= char.description %>
                                    </p>
                                </div>
                            </div>
                            <% } }); %>
                    </div>
                </div>


                <div class="yoon-characters">
                    <h3>Yoon Characters</h3>
                    <div class="grid-inner">
                        <% katakana.forEach(function(char) { if (char.character_type==='yoon' ) { %>
                            <div class="card"
                                onclick="showDetails('<%= char.char_value %>', '<%= char.description %>')">
                                <div class="card-header">
                                    <h3>
                                        <%= char.char_value %>
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <p>
                                        <%= char.description %>
                                    </p>
                                </div>
                            </div>
                            <% } }); %>
                    </div>
                </div>
            </div>
        </div>

        <div id="details-popup" class="popup" onclick="hideDetails()">
            <div class="popup-content" onclick="event.stopPropagation()">
                <span class="close" onclick="hideDetails()">&times;</span>
                <h3 id="popup-char_value"></h3>
                <p id="popup-description"></p>
            </div>
        </div>

        <script src="/js/char-script.js"></script>
    </main>
</body>

</html>