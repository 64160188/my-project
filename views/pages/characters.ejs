<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hiragana and Katakana Characters</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/char-styles.css">
</head>

<body>
    <header>
        <div class="header">
            <div class="container">
                <div class="logo_section">
                    <div class="logo">
                        <a href="#"><img src="images/logo.png" alt="Logo"></a>
                    </div>
                </div>
                <div class="menu-area">
                    <nav class="main-menu">
                        <ul class="menu-area-main">
                            <li><a href="/">Home</a></li>
                            <li><a href="/products">อุปกรณ์การเรียน</a></li>
                            <li><a href="/characters">ตัวอักษร</a></li>
                            <li><a href="/lessons">บทเรียน</a></li>
                            <li><a href="/tests">Quiz</a></li>

                            <% if (user) { %>
                                <li><a href="/profile">เข้าสู่ระบบของผู้ใช้</a></li>
                                <li><a href="/logout">ออกจากระบบ</a></li>
                            <% } else { %>
                                <li><a id="login-link" href="/login">Sign In</a></li>
                                <li><a id="sign-up-link" href="/sign_up"><img src="images/Login.png" alt="Sign Up"></a></li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <main>
        <h1>Hiragana and Katakana Characters</h1>
        <div class="tab">
            <button class="tablinks" onclick="openTab(event, 'hiragana')">Hiragana</button>
            <button class="tablinks" onclick="openTab(event, 'katakana')">Katakana</button>
        </div>

        <div id="hiragana" class="tabcontent">
            <h2>Hiragana Characters</h2>

            <h3>Normal Characters</h3>
            <div class="grid-container">
                <% hiragana.forEach(function(char) { if (char.character_type==='normal') { %>
                    <div class="card" onclick="showDetails('<%= char.char_value %>', '<%= char.description %>')">
                        <div class="card-header">
                            <h3><%= char.char_value %></h3>
                        </div>
                        <div class="card-body">
                            <p><%= char.description %></p>
                        </div>
                    </div>
                <% } }); %>
            </div>

            <h3>Dakuten Characters</h3>
            <div class="grid-container">
                <% hiragana.forEach(function(char) { if (char.character_type==='dakuten') { %>
                    <div class="card" onclick="showDetails('<%= char.char_value %>', '<%= char.description %>')">
                        <div class="card-header">
                            <h3><%= char.char_value %></h3>
                        </div>
                        <div class="card-body">
                            <p><%= char.description %></p>
                        </div>
                    </div>
                <% } }); %>
            </div>

            <h3>Yoon Characters</h3>
            <div class="grid-container">
                <% hiragana.forEach(function(char) { if (char.character_type==='yoon') { %>
                    <div class="card" onclick="showDetails('<%= char.char_value %>', '<%= char.description %>')">
                        <div class="card-header">
                            <h3><%= char.char_value %></h3>
                        </div>
                        <div class="card-body">
                            <p><%= char.description %></p>
                        </div>
                    </div>
                <% } }); %>
            </div>
        </div>

        <div id="katakana" class="tabcontent">
            <h2>Katakana Characters</h2>

            <h3>Normal Characters</h3>
            <div class="grid-container">
                <% katakana.forEach(function(char) { if (char.character_type==='normal') { %>
                    <div class="card" onclick="showDetails('<%= char.char_value %>', '<%= char.description %>')">
                        <div class="card-header">
                            <h3><%= char.char_value %></h3>
                        </div>
                        <div class="card-body">
                            <p><%= char.description %></p>
                        </div>
                    </div>
                <% } }); %>
            </div>

            <h3>Dakuten Characters</h3>
            <div class="grid-container">
                <% katakana.forEach(function(char) { if (char.character_type==='dakuten') { %>
                    <div class="card" onclick="showDetails('<%= char.char_value %>', '<%= char.description %>')">
                        <div class="card-header">
                            <h3><%= char.char_value %></h3>
                        </div>
                        <div class="card-body">
                            <p><%= char.description %></p>
                        </div>
                    </div>
                <% } }); %>
            </div>

            <h3>Yoon Characters</h3>
            <div class="grid-container">
                <% katakana.forEach(function(char) { if (char.character_type==='yoon') { %>
                    <div class="card" onclick="showDetails('<%= char.char_value %>', '<%= char.description %>')">
                        <div class="card-header">
                            <h3><%= char.char_value %></h3>
                        </div>
                        <div class="card-body">
                            <p><%= char.description %></p>
                        </div>
                    </div>
                <% } }); %>
            </div>
        </div>

        <div id="details-popup" class="popup" onclick="hideDetails()">
            <div class="popup-content" onclick="event.stopPropagation()">
                <span class="close" onclick="hideDetails()">&times;</span>
                <h3 id="popup-char_value"></h3>
                <p id="popup-description"></p>
            </div>
        </div>

        <script>
            function openTab(evt, tabName) {
                var i, tabcontent, tablinks;
                tabcontent = document.getElementsByClassName("tabcontent");
                for (i = 0; i < tabcontent.length; i++) {
                    tabcontent[i].style.display = "none";
                }
                tablinks = document.getElementsByClassName("tablinks");
                for (i = 0; i < tablinks.length; i++) {
                    tablinks[i].className = tablinks[i].className.replace(" active", "");
                }
                document.getElementById(tabName).style.display = "block";
                evt.currentTarget.className += " active";
            }

            function showDetails(character, description) {
                document.getElementById('popup-char_value').innerText = character;
                document.getElementById('popup-description').innerText = description;
                document.getElementById('details-popup').style.display = 'block';
            }

            function hideDetails() {
                document.getElementById('details-popup').style.display = 'none';
            }

            
            document.addEventListener('DOMContentLoaded', function () {
                document.querySelector('.tablinks').click();
            });
        </script>
    </main>
</body>

</html>
